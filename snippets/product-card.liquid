{% comment %}
    Renders a product card

    Accepts:
    - product_card_product: {Object} Product Liquid object (optional)
    - media_size: {String} Size of the product image card. Values are "square" and "portrait". Default is "square" (optional)
    - show_secondary_image: {Boolean} Show the secondary image on hover. Default: false (optional)
    - add_image_padding: {Boolean} Enables padding on the image to space out the grid
    - show_vendor: {Boolean} Show the product vendor. Default: false
    - show_image_outline: {Boolean} Show card outline. Default: true (optional)
    - show_rating: {Boolean} Show the product rating. Default: false
    - show_tagline: {Boolean} Show the product tagline. Default: false
    - hide_price: {Boolean} Hide the product price. Default: false

    Usage:
    {% render 'product-card', show_vendor: section.settings.show_vendor %}
{% endcomment %}

{{ 'component-rating.css' | asset_url | stylesheet_tag }}

<div class="card-wrapper">
  <div class="card-information">
    <div class="card-information__wrapper">
      {%- if show_vendor -%}
        <span class="visually-hidden">{{ 'accessibility.vendor' | t }}</span>
        <div class="caption-with-letter-spacing light">{{ product_card_product.vendor }}</div>
      {%- endif -%}

      {%- if product_card_product.featured_media -%}
        <h3 class="card-information__text h3">
          <a href="{{ product_card_product.url | default: '#' }}" class="full-unstyled-link">
            {{ product_card_product.title | escape }}
          </a>
        </h3>
      {%- endif -%}
      
      {%- if show_tagline -%}
        {%- if product_card_product.metafields.content.tagline[request.locale.iso_code] != blank -%}
          <p class="card-information__tagline">{{ product_card_product.metafields.content.tagline[request.locale.iso_code] }}</p>
        {%- else -%}
          <p class="card-information__tagline">{{ product_card_product.metafields.content.tagline['en'] }}</p>
        {%- endif -%}
      {%- endif -%}

      {% comment %} TODO: metafield {% endcomment %}
      <span class="caption-large light">{{ block.settings.description | escape }}</span>
      
      {%- if show_rating and settings.okendo_enabled -%}
        {% render 'okendo-reviews-product-rating-summary', product: product_card_product %}
      {%- endif -%}

      {% comment %} TODO: reviews are displaying twice}
      {%- if show_rating and product_card_product.metafields.reviews.rating.value != blank -%}
        {% liquid
          assign rating_decimal = 0 
          assign decimal = product_card_product.metafields.reviews.rating.value.rating | modulo: 1 
          if decimal >= 0.3 and decimal <= 0.7
            assign rating_decimal = 0.5
          elsif decimal > 0.7
            assign rating_decimal = 1
          endif 
        %}
        <div class="rating" role="img" aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: product_card_product.metafields.reviews.rating.value, rating_max: product_card_product.metafields.reviews.rating.value.scale_max }}">
          <span aria-hidden="true" class="rating-star color-icon-gold" style="--rating: {{ product_card_product.metafields.reviews.rating.value.rating | floor }}; --rating-max: {{ product_card_product.metafields.reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};"></span>
        </div>
        <p class="rating-text caption">
          <span aria-hidden="true">{{ product_card_product.metafields.reviews.rating.value }} / {{ product_card_product.metafields.reviews.rating.value.scale_max }}</span>
        </p>
        <p class="rating-count caption">
          <span aria-hidden="true">({{ product_card_product.metafields.reviews.rating_count }})</span>
          <span class="visually-hidden">{{ product_card_product.metafields.reviews.rating_count }} {{ "accessibility.total_reviews" | t }}</span>
        </p>
      {%- endif -%}
      {% endcomment %}

      {% unless hide_price %}
        {% render 'price', product: product_card_product, price_class: '' %}
      {% endunless %}
    </div>
  </div>

  <div class="card card--product{% if product_card_product.featured_media == nil %} card--text-only card--soft{% endif %}{% if product_card_product.featured_media != nil and show_image_outline %} card--outline{% endif %}" tabindex="-1">
    <div class="card__inner">
      {%- if product_card_product.featured_media -%}
        {%- liquid
          assign featured_media_aspect_ratio = product_card_product.featured_media.aspect_ratio

          if product_card_product.featured_media.aspect_ratio == nil
            assign featured_media_aspect_ratio = 1
          endif
        -%}

        <div{% if add_image_padding %} class="card__media-full-spacer"{% endif %}>
          <div class="media media--transparent media--{{ media_size }} media--hover-effect"
            {% if media_size == 'adapt' and product_card_product.featured_media %} style="padding-bottom: {{ 1 | divided_by: featured_media_aspect_ratio | times: 100 }}%;"{% endif %}
          >
            <img
              srcset="{% if product_card_product.featured_media.width >= 493 %}{{ product_card_product.featured_media | image_url: width: 493 }} 493w,{% endif %}
                {% if product_card_product.featured_media.width >= 600 %}{{ product_card_product.featured_media | image_url: width: 600 }} 600w,{% endif %}
                {% if product_card_product.featured_media.width >= 713 %}{{ product_card_product.featured_media | image_url: width: 713 }} 713w,{% endif %}
                {% if product_card_product.featured_media.width >= 823 %}{{ product_card_product.featured_media | image_url: width: 823 }} 823w,{% endif %}
                {% if product_card_product.featured_media.width >= 990 %}{{ product_card_product.featured_media | image_url: width: 990 }} 990w,{% endif %}
                {% if product_card_product.featured_media.width >= 1100 %}{{ product_card_product.featured_media | image_url: width: 1100 }} 1100w,{% endif %}
                {% if product_card_product.featured_media.width >= 1206 %}{{ product_card_product.featured_media | image_url: width: 1206 }} 1206w,{% endif %}
                {% if product_card_product.featured_media.width >= 1346 %}{{ product_card_product.featured_media | image_url: width: 1346 }} 1346w,{% endif %}
                {% if product_card_product.featured_media.width >= 1426 %}{{ product_card_product.featured_media | image_url: width: 1426 }} 1426w,{% endif %}
                {% if product_card_product.featured_media.width >= 1646 %}{{ product_card_product.featured_media | image_url: width: 1646 }} 1646w,{% endif %}
                {% if product_card_product.featured_media.width >= 1946 %}{{ product_card_product.featured_media | image_url: width: 1946 }} 1946w,{% endif %}
                {% if product_card_product.featured_media.width >= 2048 %}{{ product_card_product.featured_media | image_url: width: 2048 }} 2048w,{%- endif -%}
                {% if product_card_product.featured_media.width >= 2200 %}{{ product_card_product.featured_media | image_url: width: 2200 }} 2200w,{%- endif -%}
                {% if product_card_product.featured_media.width >= 2890 %}{{ product_card_product.featured_media | image_url: width: 2890 }} 2890w,{%- endif -%}
                {% if product_card_product.featured_media.width >= 4096 %}{{ product_card_product.featured_media | image_url: width: 4096 }} 4096w,{%- endif -%}
                {{ product_card_product.featured_media | image_url }} {{ product_card_product.featured_media.width }}w"
              src="{{ product_card_product.featured_media | image_url: width: 1946 }}"
              sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 2 }}px, (min-width: 990px) calc((100vw - 130px) / 2), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
              alt="{{ product_card_product.featured_media.alt | escape }}"
              loading="lazy"
              class="motion-reduce"
              width="{{ product_card_product.featured_media.width }}"
              height="{{ product_card_product.featured_media.height }}"
            >

            {%- if product_card_product.media[1] != nil and show_secondary_image -%}
              <img
                srcset="{% if product_card_product.media[1].width >= 493 %}{{ product_card_product.media[1] | image_url: width: 493 }} 493w,{% endif %}
                  {% if product_card_product.media[1].width >= 600 %}{{ product_card_product.media[1] | image_url: width: 600 }} 600w,{% endif %}
                  {% if product_card_product.media[1].width >= 713 %}{{ product_card_product.media[1] | image_url: width: 713 }} 713w,{% endif %}
                  {% if product_card_product.media[1].width >= 823 %}{{ product_card_product.media[1] | image_url: width: 823 }} 823w,{% endif %}
                  {% if product_card_product.media[1].width >= 990 %}{{ product_card_product.media[1] | image_url: width: 990 }} 990w,{% endif %}
                  {% if product_card_product.media[1].width >= 1100 %}{{ product_card_product.media[1] | image_url: width: 1100 }} 1100w,{% endif %}
                  {% if product_card_product.media[1].width >= 1206 %}{{ product_card_product.media[1] | image_url: width: 1206 }} 1206w,{% endif %}
                  {% if product_card_product.media[1].width >= 1346 %}{{ product_card_product.media[1] | image_url: width: 1346 }} 1346w,{% endif %}
                  {% if product_card_product.media[1].width >= 1426 %}{{ product_card_product.media[1] | image_url: width: 1426 }} 1426w,{% endif %}
                  {% if product_card_product.media[1].width >= 1646 %}{{ product_card_product.media[1] | image_url: width: 1646 }} 1646w,{% endif %}
                  {% if product_card_product.media[1].width >= 1946 %}{{ product_card_product.media[1] | image_url: width: 1946 }} 1946w,{% endif %}
                  {% if product_card_product.media[1].width >= 2048 %}{{ product_card_product.media[1] | image_url: width: 2048 }} 2048w,{%- endif -%}
                  {% if product_card_product.media[1].width >= 2200 %}{{ product_card_product.media[1] | image_url: width: 2200 }} 2200w,{%- endif -%}
                  {% if product_card_product.media[1].width >= 2890 %}{{ product_card_product.media[1] | image_url: width: 2890 }} 2890w,{%- endif -%}
                  {% if product_card_product.media[1].width >= 4096 %}{{ product_card_product.media[1] | image_url: width: 4096 }} 4096w,{%- endif -%}
                  {{ product_card_product.media[1] | image_url }} {{ product_card_product.media[1].width }}w"
                src="{{ product_card_product.media[1] | image_url: width: 1946 }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 2 }}px, (min-width: 990px) calc((100vw - 130px) / 2), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                alt="{{ product_card_product.media[1].alt | escape }}"
                loading="lazy"
                class="motion-reduce"
                width="{{ product_card_product.media[1].width }}"
                height="{{ product_card_product.media[1].height }}"
              >
            {%- endif -%}
          </div>
        </div>
      {%- else -%}
        <div class="card__content">
          <h2 class="card__text h3">
            <a href="{{ product_card_product.url | default: '#' }}" class="full-unstyled-link">
              {{ product_card_product.title }}
            </a>
          </h2>
        </div>
      {%- endif -%}

      <div class="card__badge">
        {%- for tag in product_card_product.tags -%}
          {%- if tag contains '_badge:' -%}
            <span class="badge badge--bottom-left badge--{{ tag | replace: '_badge:', '' | handleize }}" aria-hidden="true">
              {{ tag | replace: '_badge:', '' | strip }}
            </span>
          {%- endif -%}
        {%- endfor -%}

        {%- if product_card_product.tags contains '_coming-soon' -%}
          <span class="badge badge--bottom-left badge--coming-soon" aria-hidden="true">{{ 'products.product.availability.coming_soon' | t }}</span>
        
        {% comment %}
        // NOT READY FOR PRODUCTION
        {%- elsif product_card_product.tags contains '_trade-only' -%}
          <span class="badge badge--bottom-left badge--trade-exclusive" aria-hidden="true">{{ 'products.product.trade_only' | t }}</span>
        {% endcomment %}

        {%- elsif product_card_product.available == false -%}
          <span class="badge badge--bottom-left badge--sold-out" aria-hidden="true">{{ 'products.product.sold_out' | t }}</span>
        
        {%- elsif product_card_product.selected_or_first_available_variant.inventory_management != blank and product_card_product.selected_or_first_available_variant.inventory_quantity <= 0 and product_card_product.selected_or_first_available_variant.inventory_policy == 'continue' -%}
          {%- if product_card_product.tags contains '_pre-order' -%}
            <span class="badge badge--bottom-left badge--pre-order" aria-hidden="true">{{ 'products.product.availability.pre_order' | t }}</span>
          {%- else -%}
            <span class="badge badge--bottom-left badge--backorder" aria-hidden="true">{{ 'products.product.availability.backorder' | t }}</span>
          {%- endif -%}
        
        {%- elsif product_card_product.compare_at_price > product_card_product.price -%}
          {%- unless product_card_product.metafields.style.hide_discount_badges == true -%}
            {%- liquid
              for tag in product_card_product.tags
                if tag contains '_offer'
                  assign on_offer = true
                elsif tag == '_sale'
                  assign on_sale = true
                endif
              endfor
            -%}
            {%- if on_offer -%}
              <span class="badge badge--bottom-left badge--on-offer" aria-hidden="true">{{ 'products.product.on_offer' | t }}</span>
            {%- elsif on_sale or shop.metafields.settings.main.shop.mode == 'DTC' -%}
              <span class="badge badge--bottom-left badge--on-sale" aria-hidden="true">{{ 'products.product.on_sale' | t }}</span>
            {%- endif -%}
          {%- endunless -%}
        {%- endif -%}
      </div>
      {%- if product_card_product.metafields.features.ribbons.references != blank -%}
        {%- liquid
          assign ribbon = product_card_product.metafields.features.ribbons.references | first
          assign ribbon_index = shop.metafields.globals[ribbon.section] | where: "key", ribbon.key | map: 'index' | first
          assign ribbon_image = shop.metafields.globals.ribbon_image[ribbon_index][0]
        -%}
        {%- if ribbon_image != blank -%}
          <div class="card__ribbon">
            {% comment %}theme-check-disable RemoteAsset{% endcomment %}
            <img
              srcset="{%- if ribbon_image.width >= 125 -%}{{ ribbon_image.cloudinary_src | append: 'w_125' }} 125w,{%- endif -%}
                {%- if ribbon_image.width >= 200 -%}{{ ribbon_image.cloudinary_src | append: 'w_200' }} 200w,{%- endif -%}
                {%- if ribbon_image.width >= 250 -%}{{ ribbon_image.cloudinary_src | append: 'w_250' }} 250w,{%- endif -%}
                {%- if ribbon_image.width >= 500 -%}{{ ribbon_image.cloudinary_src | append: 'w_500' }} 500w{%- endif -%}"
              src="{{ ribbon_image.cloudinary_src | append: 'w_125' }}"
              {% if ribbon_image.alt != blank -%}alt="{{ ribbon_image.alt }}"{% endif -%}
              loading="lazy"
              class="motion-reduce"
              width="{%- if ribbon_image.width > 125 -%}{{ ribbon_image.width }}{%- else -%}125{%- endif -%}"
              height="auto"
            >
            {% comment %}theme-check-enable RemoteAsset{% endcomment %}
          </div>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>
</div>
